# Find the sum of all numbers which are equal to the sum of the factorial of their digits.

# https://projecteuler.net/problem=34

# Runtime: 1.904s

var sum = 0

var f = (0..9 -> map {|d| d! })

for n in (3 .. 1e5 -> by(2)) {
    if (n.digits.sum_by { f[_] } == n) {
        sum += n
    }
}

say sum
