# https://projecteuler.net/problem=235

# Runtime: 0.162s

var x1 = 1
var x2 = 2

while (x1 <= x2) {

    var x = ((x1+x2) / 2)
    var r = (((-14100 * x**5001) + (14103 * x**5000) - 900*x + 897) / (x - 1)**2 + 600000000000)

    if (abs(x1 - x2) < 1e-14) {
        printf("%.12f\n", x1)
        break
    }

    if (r > 0) {
        x1 = x
    }
    else {
        x2 = x
    }
}
